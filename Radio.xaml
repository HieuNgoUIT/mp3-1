<Page x:Class="MusicAppMP3.Radio"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MusicAppMP3"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Radio">

    <Grid>
        <Image Source="{DynamicResource ImageSource17}"  Stretch="Fill"/>
        <Button Background="Black" Foreground="White" HorizontalAlignment="Stretch" Height="50" Click="stoping" VerticalAlignment="Top">STOP</Button>
        <Button Background="Black" Foreground="White" HorizontalAlignment="Stretch" Height="50" Click="finding" VerticalAlignment="Bottom">SEARCHING</Button>
        <Button  Background="Black" Foreground="White" HorizontalAlignment="Right" Width="50" Height="50" Click="nextrad" VerticalAlignment="Bottom" >NEXT</Button>
        <Button  Background="Black" Foreground="White" HorizontalAlignment="Left" Height="50" Click="prerad" VerticalAlignment="Bottom">PREVIOUS</Button>
    </Grid>
</Page>
